@model HomeViewModel

<section class="container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-6 col-lg-5">
            <img src="~/img/users/signin-g.svg" alt="">
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <h2 class="fw-bold">Sign in to GreenCard</h2>
            <span class="text-muted">Welcome back to FreshCart! Enter your email to get started.</span>
            <div class="mt-4">
                <form>
                    <div class="row">
                        <div class="col-12">
                            <input type="text" class="form-control rounded" id="email" placeholder="Email">
                        </div>
                        <div class="col-12 mt-3">
                            <input type="text" class="form-control rounded" id="password" placeholder="******">
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <div>
                                Forgot password?
                                <a href="#" class="text-decoration-none text-success">Reset It</a>
                            </div>
                        </div>
                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-green rounded py-2 w-100">Sign In</button>
                        </div>
                        <div class="mt-3">
                            Donâ€™t have an account?
                            <a asp-asp-controller="Users" asp-action="Register"
                                class="text-decoration-none text-success">Sign Up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>