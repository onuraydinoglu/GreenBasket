<section class="mt-4">
    <div class="row">
        <div class="col-lg-2 border-end">
            <vc:dashboard-nav></vc:dashboard-nav>
        </div>

        <div class="col-lg-10">
            <vc:dashboard-header></vc:dashboard-header>

            <div class="container">
                <!-- Breacrumb -->
                <section>
                    <div class="row">
                        <div class="col-lg-12 ">
                            <div class="d-flex justify-content-between align-items-center border-bottom">
                                <div class="mt-5 mb-3">
                                    <h2>Add New Category</h2>
                                    <!-- breacrumb -->
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item me-3">
                                                <a asp-controller="Home" asp-action="Index"
                                                    class="text-decoration-none text-dark">Home</a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <a href="/Admin/Category"
                                                    class="text-decoration-none text-dark mx-3">Category</a>
                                            </li>
                                            <li class="breadcrumb-item  active" aria-current="page">
                                                <span class="ms-3">Add New Category</span>
                                            </li>
                                        </ol>
                                    </nav>
                                </div>
                                <div>
                                    <a href="/Admin/Category" class="btn btn-green py-3 px-4 rounded">Back to
                                        Category</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Creat -->
                <section class="my-5">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="border rounded shadow p-4">
                                <h4 class="mb-4 h5">Category Information</h4>
                                <form>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                <label for="name" class="form-label">Category Name</label>
                                                <input type="text" class="form-control rounded" id="name"
                                                    placeholder="Name">
                                            </div>
                                            <div class="mb-3">
                                                <label for="url" class="form-label">Category Url</label>
                                                <input type="text" class="form-control rounded" id="url"
                                                    placeholder="Url">
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="mb-3">
                                                <label for="parentCategory" class="form-label">Parent Category</label>
                                                <input type="text" class="form-control rounded" id="parentCategory"
                                                    placeholder="Parent Category">
                                            </div>
                                            <div class="form-group">
                                                <label for="image" class="form-label">Category Image</label>
                                                <div class="">
                                                    <input type="file" class="form-control-file" id="image">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <h4 class="mb-3 mt-4 h5">Status</h4>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="status"
                                                    id="statusActive" value="active">
                                                <label class="form-check-label" for="statusActive">Active</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="status"
                                                    id="statusDeactive" value="deactive">
                                                <label class="form-check-label" for="statusDeactive">Deactive</label>
                                            </div>
                                        </div>

                                        <div class="mt-4">
                                            <a type="submit" class="btn btn-green rounded py-2">Save Category</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>


                </section>

            </div>

        </div>

    </div>
</section>